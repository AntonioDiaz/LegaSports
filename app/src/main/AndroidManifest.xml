<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.adiaz.legasports">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CategoriesActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adiaz.legasports.activities.CategoriesActivity"/>
        </activity>
        <activity
            android:name=".activities.ChampionshipActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.CategoriesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adiaz.legasports.activities.CategoriesActivity"/>
        </activity>
        <activity android:name=".activities.FavoritesActivity">
        </activity>
        <activity android:name=".activities.FavoriteTeamActivity">
        </activity>
        <activity android:name=".activities.FootballActivity">
        </activity>
    </application>

</manifest>