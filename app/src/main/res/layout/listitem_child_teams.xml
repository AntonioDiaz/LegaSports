<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/choice_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/calendar_item_padding_left"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/tv_local"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        style="@style/teams_list"
        android:paddingRight="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:lines="1"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        tools:text="BALOMPEDICA CF"/>

    <TextView
        android:id="@+id/tv_local_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        style="@style/teams_list"
        tools:text="0"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        style="@style/teams_list"
        android:text="-"/>

    <TextView
        android:id="@+id/tv_visitor_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        style="@style/teams_list"
        tools:text="18"/>

    <TextView
        android:id="@+id/tv_visitor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:paddingLeft="8dp"
        style="@style/teams_list"
        android:ellipsize="end"
        android:maxLines="1"
        android:lines="1"
        tools:text="ATLEICO DE MADRID"/>
</LinearLayout>