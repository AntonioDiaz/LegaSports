<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_week"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:paddingRight="8dp"
        android:textAlignment="textEnd"
        tools:text="01"/>

    <TextView
        android:id="@+id/tv_undefined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="@string/undefined_week"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_matchinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="9"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingRight="8dp"
            android:textAlignment="textEnd"
            style="@style/child_detail_expandable_list"
            android:textStyle="bold"
            tools:text="BALOMPEDICA CF"/>

        <TextView
            android:id="@+id/tv_local_score"
            style="@style/child_detail_expandable_list"
            android:textStyle="bold"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            tools:text="69"/>

        <TextView
            style="@style/teams_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="-"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_visitor_score"
            style="@style/child_detail_expandable_list"
            android:textStyle="bold"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            tools:text="18"/>

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="9"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="8dp"
            style="@style/child_detail_expandable_list"
            android:textStyle="bold"
            android:textAlignment="textStart"
            tools:text="ATLEICO DE MADRID"/>
    </LinearLayout>
</LinearLayout>