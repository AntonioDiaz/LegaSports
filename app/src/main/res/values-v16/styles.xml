<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_expandable_list">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/listheader_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="child_expandable_list">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textSize">@dimen/listchild_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="child_detail_expandable_list">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textSize">@dimen/listchild_detail_font_size</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="text_small_classification" parent="text_small">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/listchild_font_size</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="ListHeader">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="mistake_form">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="mistake_spinner">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="text_subheader" parent="text_header">
        <item name="android:textSize">@dimen/text_header_font_small</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>